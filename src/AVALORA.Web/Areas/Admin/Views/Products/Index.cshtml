@{
	ViewBag.Title = "Products";
}

<div class="mt-5">
	<h3 class="text-center text-uppercase">Product List</h3>

	<div class="row mt-5">
		<div class="col-12">
			<div class="text-end">
				<a asp-action="Create" class="btn btn-primary">Post New Product</a>
			</div>

			<table id="dataTable" class="table table-bordered table-hover mt-3">
				<thead>
					<tr>
						<th>ID</th>
						<th>Name</th>
						<th>Price</th>
						<th>Category</th>
						<th>Product Images</th>
					</tr>
				</thead>
			</table>
		</div>
	</div>
</div>

@section Scripts {
	<script src="~/js/product_datatable.js"></script>
}