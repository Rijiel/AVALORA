@model ApplicationUserRoleVM
@{
	ViewBag.Title = "Edit User";
}

<breadcrumb></breadcrumb>

<div class="content">
	<header class="header text-center" aria-labelledby="user-role-header">
		<h2 id="user-role-header" class="text-dark-primary fs-7">Change User Role <i class="bi bi-pencil-square" aria-hidden="true"></i></h2>
	</header>
	<div class="row text-center mt-4">
		<div class="col-8 col-lg-6 mx-auto">
			<form method="post" aria-labelledby="user-role-header">
				<fieldset class="fieldset row gy-3">
					<!-- Id -->
					<input asp-for="Id" hidden aria-hidden="true" />
					<!-- Name -->
					<div class="form-floating">
						<input asp-for="Name" class="form-control text-center" placeholder="" readonly />
						<label asp-for="Name" class="text-center text-muted"></label>
					</div>
					<!-- Role -->
					<div class="form-floating">
						<select asp-for="Role" asp-items="Model.Roles" id="Input_Role" class="form-control form-select text-center"
								aria-required="true" aria-label="Select user role"></select>
						<label asp-for="Role" class="text-center text-muted"></label>
					</div>
					<!-- Buttons -->
					<div class="mt-4 row d-flex justify-content-center mx-auto">
						<a asp-action="Index" class="btn btn-outline-primary btn-col-8 btn-menu order-last order-md-0" aria-label="Back to users list" title="Back to users list">
							Back to List
						</a>
						<button type="submit" class="btn btn-primary btn-menu btn-col-8" aria-label="Update user role" title="Update user role">
							Update
						</button>
						<div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
					</div>
				</fieldset>
			</form>
		</div>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}