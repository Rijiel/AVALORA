@model ApplicationUserRoleVM
@{
	ViewBag.Title = "Edit User";
}

<section class="content">
	<header class="header text-center">
		<h2 class="text-dark-primary fs-7">Change User Role <i class="bi bi-pencil-square"></i></h2>
	</header>
	<div class="row text-center mt-4">
		<div class="col-6 offset-3">
			<form method="post">
				<fieldset class="fieldset row gy-3">
					<!-- Id -->
					<input asp-for="Id" hidden />
					<!-- Name -->
					<div class="form-floating">
						<input asp-for="Name" class="form-control" placeholder="" readonly />
						<label asp-for="Name" class="form-label text-muted"></label>
					</div>
					<!-- Role -->
					<div class="form-floating">
						<select asp-for="Role" asp-items="Model.Roles" id="Input_Role" class="form-select"></select>
						<label asp-for="Role" class="form-label text-muted"></label>
					</div>
					<!-- Buttons -->
					<div class="mt-4 row d-flex justify-content-center">
						<button type="submit" class="btn btn-primary btn-menu">Update</button>
						<a asp-action="Index" class="btn btn-outline-primary btn-menu">Back to List</a>
						<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					</div>
				</fieldset>
			</form>
		</div>
	</div>
</section>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}