@model ApplicationUserRoleVM
@{
	ViewBag.Title = "Edit User";
}

<breadcrumb></breadcrumb>

<div class="content">
	<header class="header text-center">
		<h2 class="text-dark-primary fs-7">Change User Role <i class="bi bi-pencil-square"></i></h2>
	</header>
	<div class="row text-center mt-4">
		<div class="col-8 col-lg-6 mx-auto">
			<form method="post">
				<fieldset class="fieldset row gy-3">
					<!-- Id -->
					<input asp-for="Id" hidden />
					<!-- Name -->
					<div class="form-floating">
						<input asp-for="Name" class="form-control text-center" placeholder="" readonly />
						<label asp-for="Name" class="text-center text-muted"></label>
					</div>
					<!-- Role -->
					<div class="form-floating">
						<select asp-for="Role" asp-items="Model.Roles" id="Input_Role" class="form-control form-select text-center"></select>
						<label asp-for="Role" class="text-center text-muted"></label>
					</div>
					<!-- Buttons -->
					<div class="mt-4 row d-flex justify-content-center mx-auto">
						<a asp-action="Index" class="btn btn-outline-primary btn-col-8 btn-menu order-last order-md-0">Back to List</a>
						<button type="submit" class="btn btn-primary btn-menu btn-col-8">Update</button>
						<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					</div>
				</fieldset>
			</form>
		</div>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}