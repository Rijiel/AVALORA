@model CategoryUpdateRequest
@{
	ViewBag.Title = "Edit Category";
}

<breadcrumb></breadcrumb>

<div class="content-lg">
	<a asp-action="Index" class="btn btn-link text-decoration-none p-0 ms-n3"><i class="bi bi-caret-left-fill"></i> Back to List</a>
	<header class="header text-center">
		<h2 class="text-dark-primary fs-7">Edit Category <i class="bi bi-pencil-square"></i></h2>
	</header>
	<div class="row text-center mt-4">
		<div class="col-8 col-lg-6 mx-auto">
			<form method="post">
				<!-- Id -->
				<input asp-for="Id" hidden />
				<!-- Name -->
				<div class="form-floating">
					<input asp-for="Name" class="form-control text-center" placeholder="" />
					<label asp-for="Name" class="text-center"></label>
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
				<!-- Buttons -->
				<div class="mt-4 row d-flex justify-content-center">
					<button type="submit" class="btn btn-primary btn-menu btn-col-8">Update</button>
					<a onclick="Delete('/categories/delete/@Model.Id')" class="btn btn-danger btn-menu btn-col-8">Delete Category</a>
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				</div>
			</form>
		</div>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
	<script src="~/js/category_delete.js"></script>
}