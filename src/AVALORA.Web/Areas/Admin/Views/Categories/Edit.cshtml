@model CategoryUpdateRequest
@{
	ViewBag.Title = "Edit Category";
}

<div class="mt-5">
	<h3 class="text-center text-uppercase">Edit Category</h3>
	<a asp-action="Index" class="btn btn-outline-info">Back to List</a>

	<div class="row mt-5 p-5 border">
		<div class="col-12">
			<form method="post">
				<!-- Id -->
				<input asp-for="Id" hidden />
				<!-- Name -->
				<div class="form-floating">
					<input asp-for="Name" class="form-control" placeholder="" />
					<label asp-for="Name" class="form-label text-muted"></label>
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
				<!-- Buttons -->
				<div class="mt-3 row">
					<div class="col-3">
						<button type="submit" class="btn btn-primary form-control">Update</button>
					</div>
					<div class="col-3">
						<a onclick="Delete('/categories/delete/@Model.Id')" class="btn btn-danger form-control">Delete Category</a>
					</div>
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				</div>
			</form>
		</div>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
	<script src="~/js/category_delete.js"></script>
}