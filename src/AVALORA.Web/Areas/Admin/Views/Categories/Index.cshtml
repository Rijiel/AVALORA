@model CategoriesVM
@{
	ViewBag.Title = "Categories";
}

<div class="row content">
	<!-- Left Column -->
	<section class="col-6">
		<!-- Create Category -->
		<form method="post" class="text-center">
			<h4 class="text-dark-primary">Create New Category <i class="bi bi-clipboard2-plus"></i></h4>
			<!-- Name -->
			<div class="mt-2">
				<input asp-for="CategoryAddRequest.Name" class="form-control text-center w-75 mx-auto" placeholder="" />
				<span asp-validation-for="CategoryAddRequest.Name" class="text-danger"></span>
			</div>
			<!-- Buttons -->
			<div class="mt-4 row d-flex justify-content-center">
				<button type="submit" class="btn btn-primary btn-menu">Create</button>
				<a class="btn btn-outline-primary btn-menu" asp-area="@Role.User" asp-controller="Home" asp-action="Index">Back to Home</a>
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			</div>
		</form>
		<!-- Categories -->
		<div class="mt-5 text-center">
			<h5 class="text-dark-primary">All Categories</h5>
			<div class="row mt-3">
				@foreach (var category in Model.CategoryResponses)
				{
					<div class="col-md-2 mb-3 p-0">
						<a asp-action="Edit" asp-route-id="@category.Id">
							@category.Name
						</a>
					</div>
				}
			</div>
		</div>
	</section>

	<!-- Right Column -->
	<section class="col-6 d-flex flex-column justify-content-end">
		<div class="mx-auto text-center dropdown-anim">
			<img src="~/images/categories.png" class="w-50 z-1" />
		</div>
		<div class="mb-n11 ms-5 text-center">
			<img src="~/images/categoryitems.png" class="w-75" loading="lazy" />
		</div>
	</section>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
