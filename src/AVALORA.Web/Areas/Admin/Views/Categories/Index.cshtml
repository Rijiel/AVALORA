@model CategoriesVM
@{
	ViewBag.Title = "Categories";
}

<breadcrumb></breadcrumb>

<div class="row content">
	<!-- Left Column -->
	<section class="col-10 col-lg-6 offset-1 offset-lg-0">
		<form method="post" class="text-center">
			<header class="header text-center">
				<h2 class="text-dark-primary fs-7">Create New Category <i class="bi bi-clipboard2-plus"></i></h2>
			</header>
			<!-- Name -->
			<div class="mt-4">
				<input asp-for="CategoryAddRequest.Name" class="form-control text-center w-75 mx-auto" placeholder="" />
				<span asp-validation-for="CategoryAddRequest.Name" class="text-danger"></span>
			</div>
			<!-- Buttons -->
			<div class="mt-4 row d-flex justify-content-center gap-2">
				<a class="btn btn-outline-primary btn-menu btn-col-10 order-last order-md-0" asp-area="@Role.User" asp-controller="Home" asp-action="Index">Back to Home</a>
				<button type="submit" class="btn btn-primary btn-menu btn-col-10">Create</button>
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			</div>
		</form>
		<!-- All Categories -->
		<div class="mt-5 text-center">
			<h5 class="text-dark-primary">All Categories</h5>
			<div class="row mt-3">
				@foreach (var category in Model.CategoryResponses)
				{
					<div class="col-3 col-md-2 mb-3 p-0 text-truncate">
						<a asp-action="Edit" asp-route-id="@category.Id">
							@category.Name
						</a>
					</div>
				}
			</div>
		</div>
	</section>
	<!-- Right Column -->
	<section class="col-10 col-lg-6 offset-1 offset-lg-0 d-none d-lg-flex flex-column justify-content-end">
		<div class="text-center dropdown-anim">
			<img src="~/images/categories.png" class="w-50 z-1" />
		</div>
		<div class="img-category text-center d-flex justify-content-end">
			<img src="~/images/categoryitems.png" class="w-75 z-n1" loading="lazy" />
		</div>
	</section>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
