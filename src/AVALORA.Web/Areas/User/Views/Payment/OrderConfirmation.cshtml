@model OrderHeaderResponse
@{
	ViewBag.Title = "Order Confirmed!";
}

<div class="mt-5 text-center">
	<div>
		<h3 class="text-uppercase">Order Confirmed!</h3>
	</div>
	<div>
		<p>Your order number: @Model.Id</p>
	</div>

	<div class="row mt-3">
		<div class="col-12">
			<div class="mx-auto">
				<img src="~/images/orderconfirm.jpg" class="w-50 rounded" />
			</div>
			<div class="mt-3">
				<a asp-controller="Home" asp-action="Index" class="btn btn-primary">Back to Home</a>
			</div>
		</div>
	</div>
</div>
