@model OrderHeaderResponse
@{
	ViewBag.Title = "Order Confirmed!";
}

<div class="row content-lg">
	<header class="header text-center" aria-labelledby="order-confirmation-header">
		<h2 id="order-confirmation-header" class="text-dark-primary fs-7">Thank you for purchasing!</h2>
	</header>
	<div class="col-12 col-md-9 col-lg-8 mx-auto text-center mt-4" role="region" aria-labelledby="order-confirmation-header">
		<p>Your order number is: <strong class="text-orange">@Model.Id</strong></p>
		<div class="mx-auto">
			<img src="~/images/orderconfirm.jpg" class="w-50 rounded" alt="Order confirmation image" aria-hidden="true" />
		</div>
		<div class="mt-3">
			<a asp-controller="Home" asp-action="Index" class="btn btn-primary" role="button" aria-label="Back to Home" title="Back to Home">Back to Home</a>
		</div>
	</div>
</div>
