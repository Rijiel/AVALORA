@model ProductDetailsVM
@{
	ViewData["Title"] = "Product Details";

	var pager = ViewBag.Pager as PagerService;
	int totalStars = (int)Model.CartItemAddRequestVM.ProductResponse.TotalRating;
}

<div class="row content-lg">
	<div class="col-12">
		<!-- Product Details -->
		<section>
			@using (Html.BeginForm("Details", "Home", FormMethod.Post))
			{
				<input asp-for="CartItemAddRequestVM.ProductResponse.Id" hidden />
				<input asp-for="CartItemAddRequestVM.CartItemAddRequest.ProductId" hidden />
				<input asp-for="CartItemAddRequestVM.CartItemAddRequest.ApplicationUserId" hidden />

				<a asp-action="Index" class="btn btn-link text-decoration-none p-0 ms-n3"><i class="bi bi-caret-left-fill"></i> Back to Home</a>

				<div class="row mt-4">
					<!-- Left Column -->
					<div class="col-4">
						@{
							var product = Model.CartItemAddRequestVM.ProductResponse;
						}
						@if (product.ProductImages?.Count > 1)
						{
							<div id="carousel" class="carousel slide carousel-dark" data-bs-ride="carousel" data-bs-theme="dark">
								<div class="carousel-indicators">
									@for (int i = 0; i < product.ProductImages.Count; i++)
									{
										<button type="button" data-bs-target="#carousel" data-bs-slide-to="@i" class="@(i == 0 ? "active" : "")"
												aria-current="true" aria-label="Slide @(i + 1)"></button>
									}
								</div>
								<div class="carousel-inner">
									@for (int i = 0; i < product.ProductImages.Count; i++)
									{
										<div class="carousel-item @(i == 0 ? "active" : "")" data-bs-interval="5000">
											<img src="@product.ProductImages.ElementAt(i).Path" alt="product image">
										</div>
									}
								</div>
								<button class="carousel-control-prev" type="button" data-bs-target="#carousel" data-bs-slide="prev">
									<span class="carousel-control-prev-icon" aria-hidden="true"></span>
									<span class="visually-hidden">Previous</span>
								</button>
								<button class="carousel-control-next" type="button" data-bs-target="#carousel" data-bs-slide="next">
									<span class="carousel-control-next-icon" aria-hidden="true"></span>
									<span class="visually-hidden">Next</span>
								</button>
							</div>
							<hr />
							<div class="row mt-3">
								@foreach (var image in product.ProductImages.Take(4))
								{
									<div class="col-3  d-flex align-items-center">
										<img src="@image.Path" class="w-100" alt="product image">
									</div>
								}
							</div>
						}
						else
						{
							<partial name="_ProductImagePartial" model="product" />
						}
					</div>

					<!-- Right Column-->
					<div class="col-8 ps-5">
						<div class="mt-3">
							<div class="d-inline-block">
								<p class="badge bg-orange pb-2">@product.Category.Name</p>
								<h4 class="">@Model.CartItemAddRequestVM.ProductResponse.Name</h4>
							</div>
							<div class="d-flex align-items-center">
								<div class="d-inline-block">
									<span class="text-decoration-underline me-1 fs-4">
										@product.TotalRating.ToString("F1")
									</span>
									<span class="d-inline-block">
										<partial name="_ProductRatingPartial" model="product" />
									</span>
								</div>
								<div class="vr fs-7 mx-2"></div>
								<div>
									<span class="text-decoration-underline me-1 fs-4">
										@product.ProductReviews?.Count
									</span>
									<span class="text-black-50">Ratings</span>
								</div>
							</div>
							<div class="mt-3 lh-sm text-muted">
								<span class="text-primary fw-semibold fs-6">
									@product.Price.ToString("c")
								</span>
								<span class="me-1 text-primary">
									<i class="bi bi-tags-fill"></i>
								</span>
								@if (product.ListPrice > 0 && product.ListPrice != product.Price)
								{
									<span class="mb-2 text-decoration-line-through text-black-50">@product.ListPrice.Value.ToString("c")</span>
								}
							</div>
							<div class="mt-5 overflow-auto" style="max-height: 20rem">
								<p>@Html.Raw(product.Description)</p>
							</div>
							<!-- Colors -->
							@if (product.Colors.FirstOrDefault() != Color.None)
							{
								<div class="my-2 row">
									@{
										var colors = product.Colors;
									}
									<label class="form-label text-muted small opacity-75">Available Colors:</label>
									<div class="col-2">
										@for (int i = 0; i < colors.Count; i++)
										{
											<div class="d-inline-block mx-1">
												<input type="radio" class="btn-check" asp-for="CartItemAddRequestVM.CartItemAddRequest.Color"
													   id="color@(i)" value="@colors[i]" autocomplete="off" />
												<label for="color@(i)" class="color-option bg-@colors[i].ToString().ToLower()" title="@colors[i]"></label>
											</div>
										}
									</div>
									<span asp-validation-for="CartItemAddRequestVM.CartItemAddRequest.Color" class="text-danger"></span>
								</div>
							}
							<!-- Buttons -->
							<div class="row mt-5">
								<div class="col-3">
									<div class="mt-3 input-group">
										<div class="input-group-text bg-secondary border-0 text-light fw-bold">Count</div>
										<input asp-for="CartItemAddRequestVM.CartItemAddRequest.Count" type="number" min="1" value="1" class="form-control border-1 rounded-0 rounded-end text-end pe-2" />
										<span asp-validation-for="CartItemAddRequestVM.CartItemAddRequest.Count" class="text-danger"></span>
									</div>
								</div>
								<div class="my-3">
									<button type="submit" class="btn btn-primary">Add to cart</button>
								</div>
							</div>
						</div>
					</div>
				</div>
			}
		</section>

		<!-- Product Reviews -->
		<section class="row mt-11">
			<div class="col-8 offset-2">
				<h4 class="text-uppercase text-secondary">Product Reviews <i class="bi bi-chat-square-dots"></i></h4>
				<div>
					@if (User.Identity!.IsAuthenticated)
					{
						<section class="mb-5">
							@using (Html.BeginForm("AddReview", "Home", FormMethod.Post))
							{
								var productReviewAddRequest = Model.ProductReviewVM.ProductReviewAddRequest;

								<input asp-for="@productReviewAddRequest.ProductId" hidden />
								<input asp-for="@productReviewAddRequest.DatePosted" hidden />
								<input asp-for="@productReviewAddRequest.UserName" id="userName" hidden />
								<input asp-for="@productReviewAddRequest.Rating" id="rating" hidden />
								<!-- Star Rating -->
								<div>
									<strong id="myName">@productReviewAddRequest.UserName</strong>
								</div>
								<div class="text-orange mb-3" onmouseout="rateSelected()">
									@for (int i = 1; i <= 5; i++)
									{
										<span id="span@(i)" onmouseout="rateOut(@(i))" onmouseover="rateOver(@(i))" onclick="rate(@(i))" class="bi bi-star"></span>
									}
								</div>
								<span asp-validation-for="@productReviewAddRequest.Rating" class="text-danger"></span>
								<!-- Comment -->
								<textarea asp-for="@productReviewAddRequest.Comment" class="form-control" rows="3" placeholder="Type your review..."></textarea>
								<span asp-validation-for="@productReviewAddRequest.Comment" class="text-danger"></span>
								<div class="d-flex align-items-center mt-2">
									<button type="submit" class="btn btn-sm btn-secondary">Add Review</button>
									<input type="checkbox" onchange="changeUserName(this.checked)" class="form-check-input ms-2 me-1" id="anonymous" />
									<label for="anonymous" class="form-check-label">Anonymous?</label>
								</div>
							}
						</section>

					}
				</div>
				<!-- All Reviews -->
				<div>
					@if (Model.ProductReviewVM.ProductReviewResponses?.Count() > 0)
					{
						<div>
							@foreach (var review in Model.ProductReviewVM.ProductReviewResponses)
							{
								<div class="mb-4">
									<partial name="_ProductReviewPartial" model="review" />
								</div>
							}
						</div>
					}
				</div>
				<!-- Pagination -->
				<nav class="container">
					@if (pager!.TotalPages > 0)
					{
						<ul class="pagination justify-content-end">
							@for (var pge = pager.StartPage; pge <= pager.EndPage; pge++)
							{
								<li class="page-item @(pge == pager.CurrentPage ? "active" : "")">
									<a href="/Home/Details/@(Model.CartItemAddRequestVM.ProductResponse.Id)?page=@pge"
									   class="page-link">@pge</a>
								</li>
							}
						</ul>
					}
				</nav>
			</div>
		</section>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
	<script src="~/js/star_rating.js"></script>
}
